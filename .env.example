# Codex2API Configuration Example
# Copy this file to .env and modify the values as needed

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=true
SERVER_WORKERS=1

# CORS Configuration
SERVER_CORS_ORIGINS=["*"]
SERVER_CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
SERVER_CORS_HEADERS=["*"]

# =============================================================================
# Authentication Configuration
# =============================================================================
# OpenAI OAuth Client ID (get from OpenAI developer console)
AUTH_CLIENT_ID=your_openai_client_id_here

# OAuth Redirect URI (must match your registered redirect URI)
AUTH_REDIRECT_URI=http://localhost:8000/v1/auth/callback

# OAuth Scope (permissions requested from OpenAI)
AUTH_SCOPE=openid email profile offline_access model.request model.read organization.read

# Token Management
AUTH_TOKEN_REFRESH_THRESHOLD=300
AUTH_MAX_REFRESH_ATTEMPTS=3
AUTH_SESSION_TIMEOUT=3600

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=Codex2API
APP_VERSION=0.2.0
APP_DESCRIPTION=Modern OpenAI compatible API powered by ChatGPT

# Environment (development, staging, production, testing)
ENVIRONMENT=development
DEBUG=true

# Data Directory (for storing tokens, sessions, logs)
DATA_DIR=./data

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite database for token storage
DB_URL=sqlite:///./data/codex2api.db
DB_ECHO=false
DB_POOL_SIZE=5

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./data/logs/codex2api.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# API Configuration
# =============================================================================
# Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60

# Request Limits
API_MAX_REQUEST_SIZE=1048576
API_REQUEST_TIMEOUT=30

# OpenAI API Settings
API_OPENAI_BASE_URL=https://api.openai.com/v1
API_OPENAI_TIMEOUT=60

# =============================================================================
# Production Settings (uncomment for production deployment)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# SERVER_RELOAD=false
# SERVER_WORKERS=4
# LOG_LEVEL=WARNING
# AUTH_REDIRECT_URI=https://your-domain.com/v1/auth/callback

# =============================================================================
# Notes
# =============================================================================
# 1. Reasoning parameters (reasoning_effort, reasoning_summary, etc.) are
#    request parameters controlled by users, not server configuration.
#
# 2. Replace 'your_openai_client_id_here' with your actual OpenAI OAuth client ID
#    from https://platform.openai.com/settings/organization/oauth
#
# 3. For production, use HTTPS URLs and secure redirect URIs
#
# 4. The DATA_DIR will be created automatically if it doesn't exist
